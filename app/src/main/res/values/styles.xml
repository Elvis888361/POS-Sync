<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Styles -->
    <style name="TextAppearance.POSApp" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@string/font_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextAppearance.POSApp.Title">
        <item name="android:fontFamily">@string/font_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextAppearance.POSApp.Subtitle">
        <item name="android:fontFamily">@string/font_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextAppearance.POSApp.Body">
        <item name="android:fontFamily">@string/font_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>
    <string-array name="language_options">
        <item>English</item>
        <item>Spanish</item>
        <item>French</item>
        <item>German</item>
    </string-array>
</resources>