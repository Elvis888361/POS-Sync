<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/progressbar_background"/>
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="-90"
            android:toDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="oval">
                <solid android:color="@color/progressbar_color"/>
            </shape>
        </rotate>
    </item>
</layer-list>
